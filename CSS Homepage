    text-decoration: none;    /* Quita el subrayado de los enlaces */
    font-size: 18px;          /* Tamaño de fuente */
    font-weight: bold;        /* Texto más grueso */
    font-family: Arial, sans-serif; /* Fuente moderna */
    transition: background-color 0.3s ease; /* Transición suave al hover */
  }
  
  .topnav a:hover {
    background-color: #000;   /* Cambia a negro al pasar el ratón */
    color: #fff;              /* Texto blanco al hover */
  }
  
  .topnav a.active {
    background-color: #000;   /* Fondo negro para el enlace activo */
    color: #fff;              /* Texto blanco para el enlace activo */
}

/* Contenedor para las imágenes alineadas horizontalmente */
.middle-high-container {
    display: flex;              /* Flexbox para alinear las imágenes en una fila */
    justify-content: space-around; /* Espacio uniforme entre las imágenes */
    align-items: center;        /* Centra las imágenes verticalmente dentro del contenedor */
    height: auto;               /* Ajusta la altura según el contenido */
    margin-top: 10vh;            /* Deja un espacio desde la parte superior para las imágenes */
}

/* Estilo para las imágenes dentro del contenedor */
.middle-high-container img {
    width: 15%;                 /* Cada imagen ocupará el 15% del ancho */
    height: auto;               /* Mantiene las proporciones de las imágenes */
    border-radius: 10px;        /* Bordes redondeados */
    box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1); /* Sombra sutil */
    transition: transform 0.3s ease; /* Transición suave para el hover */
}

/* Efecto hover para las imágenes */
.middle-high-container img:hover {
    transform: scale(1.05);     /* Agranda ligeramente la imagen al pasar el ratón */
}

